= form_for @event do |f|
  -if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :Status
    = f.text_field :Status
  .field
    = f.label :Service
    = f.text_field :Service
  .field
    = f.label :timestamp
    = f.text_field :timestamp
  .field
    = f.label :message
    = f.text_field :message
  .actions
    = f.submit 'Save'
